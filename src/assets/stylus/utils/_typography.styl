// Typographic Variables
//////////////////////////////////////////////////////

// Guide

$letter-spacing = {
  normal: normal
}

$font-weight = {
  regular: 400,
  bold: 700,
}

// Universal Typographic Mixin
//////////////////////////////////////////////////////

// We use one, only one, Karl, a universal mixin for all cases !!!!!!!!!!

// Текст
$text($name)
  font-family "Ubuntu"
  letter-spacing $letter-spacing.normal

  if $name == "apaches"
    font-size 20 * $pixel
    line-height 24 * $pixel
    font-weight $font-weight.regular
  if $name == "comanche"
    font-size 24 * $pixel
    line-height 28 * $pixel
    font-weight $font-weight.bold

// Заголовки
$header($name)
  font-family "Amatic SC"
  letter-spacing $letter-spacing.normal

  if $name == "navajo"
    font-size 90 * $pixel
    line-height 90 * $pixel
    font-weight $font-weight.bold
  if $name == "aleuts"
    font-size 52 * $pixel
    line-height 52 * $pixel
    font-weight $font-weight.regular
  if $name == "aztecs"
    font-size 52 * $pixel
    line-height 70 * $pixel
    font-weight $font-weight.bold
  if $name == "crow"
    font-size 36 * $pixel
    line-height 48 * $pixel
    font-weight $font-weight.bold
